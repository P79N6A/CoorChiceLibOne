<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="StrokedTextView">
    <!-- The color of the stroke outline -->
    <attr name="strokeViewColor" format="reference|color"/>
    <!-- The color of the text -->
    <attr name="strokeTextColor" format="reference|color"/>
    <!-- The width of the stroke -->
    <attr name="strokeOutlineWidth" format="reference|float"/>

    <attr name="gradient" format="reference|boolean"/>
    <attr name="startColor" format="reference|color"/>
    <attr name="endColor" format="reference|color"/>
  </declare-styleable>

  <!--圆角TextView-->
  <declare-styleable name="RoundCornerTextView">
    <attr name="corner" format="dimension"/>
    <attr name="solid" format="reference|color"/>
    <attr name="stroke_width" format="float"/>
    <attr name="stroke_color" format="reference|color"/>
    <attr name="state_drawable" format="reference"/>
    <attr name="isShowState" format="boolean"/>
    <attr name="autoAdjustSize" format="boolean"/>
  </declare-styleable>
</resources>