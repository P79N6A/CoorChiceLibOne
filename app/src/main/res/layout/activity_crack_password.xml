<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_crack_password"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/opacity_7_green"
  android:paddingBottom="5dp"
  android:paddingLeft="5dp"
  android:paddingRight="5dp"
  android:paddingTop="5dp"
  tools:context="com.chenbing.coorchicelibone.Views.CrackPasswordActivity">

  <TextView
    android:id="@+id/tv_display_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="5dp"
    android:textColor="@color/opacity_9_green"
    tools:text="FBIasdfasdfasdfasdfsadfasdfasdfasdfasdfasdfasdfasdfasdfasfdasdfsadfsadf"
    />

  <LinearLayout
    android:layout_width="150dp"
    android:layout_height="30dp"
    android:layout_centerInParent="true"
    android:background="#006400"
    >

    <EditText
      android:id="@+id/code_1"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@drawable/et_input_code"
      android:gravity="center"
      android:inputType="numberPassword"
      android:maxLength="1"

      />

    <EditText
      android:id="@+id/code_2"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@drawable/et_input_code"
      android:gravity="center"
      android:inputType="numberPassword"
      android:maxLength="1"

      />

    <EditText
      android:id="@+id/code_3"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@drawable/et_input_code"
      android:gravity="center"
      android:inputType="numberPassword"
      android:maxLength="1"

      />

